<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/add_update_news_card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    android:elevation="16dp"
    android:layout_margin="8dp"
    android:backgroundTint="@color/colorPrimaryDark"
    android:background="@drawable/background_color"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/background_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add new News"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textSize="24sp"
            android:textColor="@color/textTabBright"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please fill full info"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:textColor="@color/textTabBright"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            />


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorPrimaryDark"
            android:layout_marginTop="8dp">
            <EditText
                android:id="@+id/title_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:padding="2dp"
                android:hint="Title"
                android:text=""
                android:inputType="text"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/colorPrimaryDark"
                android:textSize="24sp"
                android:background="@drawable/edt_btn_shape"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorPrimaryDark"
            android:layout_marginTop="4dp">
            <EditText
                android:id="@+id/descripition_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:padding="2dp"
                android:hint="Description"
                android:text=""
                android:inputType="text"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/edt_btn_shape"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/colorPrimaryDark"
                android:textSize="24sp"
                />

        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/cancle_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:shadowRadius="4"
                android:text="Cancel"
                android:layout_marginEnd="8dp"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="14sp"
                android:background="@drawable/ripple_effect_with_round_edge_btn_edt"
                android:textColor="@android:color/white"
                />
            <Button
                android:id="@+id/add_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:shadowRadius="4"
                android:text="ADD"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:background="@drawable/ripple_effect_with_round_edge_btn_edt"
                android:textColor="@android:color/white"
                />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>